{
  "name": "burdens-health",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "service:install": "chmod +x install.sh && sudo ./install.sh",
    "service:uninstall": "chmod +x uninstall.sh && sudo ./uninstall.sh",
    "service:start": "sudo systemctl start health-monitor",
    "service:stop": "sudo systemctl stop health-monitor",
    "service:restart": "sudo systemctl restart health-monitor",
    "service:status": "sudo systemctl status health-monitor",
    "service:logs": "sudo journalctl -u health-monitor -f"
  },
  "dependencies": {
    "axios": "^1.13.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "node-cron": "^3.0.3",
    "nodemon": "^3.1.11"
  }
}
